<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:bat-c24="http://schema.c24.biz/spring-batch"
       xmlns:c24="http://schema.c24.biz/spring-core"
       xsi:schemaLocation="
		http://schema.c24.biz/spring-core	http://schema.c24.biz/spring-core.xsd
		http://schema.c24.biz/spring-batch	http://schema.c24.biz/spring-batch.xsd
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- File sources used to read files from disk -->
	<bean id="fileSource" class="biz.c24.io.spring.batch.reader.source.FileSource" />
	<bean id="zipFileSource" class="biz.c24.io.spring.batch.reader.source.ZipFileSource" />

	<!-- The type of model we're going to be parsing -->
	<c24:model id="employeeModel" base-element="biz.c24.io.examples.models.basic.EmployeeElement" />

	<bat-c24:itemreader id="nonSplittingNonValidatingCsvReader" model-ref="employeeModel" validate="false" source-ref="fileSource"/>
	<bat-c24:itemreader id="nonSplittingValidatingCsvReader" model-ref="employeeModel" validate="true" source-ref="fileSource"/>
	<bat-c24:itemreader id="splittingNonValidatingCsvReader" model-ref="employeeModel" validate="false" elementStartPattern=".*" source-ref="fileSource"/>
	<bat-c24:itemreader id="splittingValidatingCsvReader" model-ref="employeeModel" validate="true" elementStartPattern=".*" source-ref="fileSource"/>

	<bat-c24:itemreader id="nonSplittingValidatingZipReader" model-ref="employeeModel" validate="true" source-ref="zipFileSource"/>
	<bat-c24:itemreader id="splittingValidatingZipReader" model-ref="employeeModel" validate="true" elementStartPattern=".*" source-ref="zipFileSource"/>

</beans>
